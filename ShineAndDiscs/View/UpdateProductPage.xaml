<Page x:Class="ShineAndDiscs.View.UpdateProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShineAndDiscs.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UpdateProductPage">

    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Название товара" />
            <TextBox x:Name="TitleTextBox" Text="{Binding Title}"/>
            
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Тип товара" />
            <ComboBox DisplayMemberPath="Title" SelectedValuePath="ID" x:Name="TypeComboBox"/>

        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Артикул товара"/>
            <TextBox x:Name="ArticleTextBox" Text="{Binding ArticleNumber}"/>

        </StackPanel>
    </StackPanel>
    
</Page>
